# Application
APP_ENV=development
APP_NAME=cuba-erp

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cuba
DATABASE_MAX_CONNECTIONS=10

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# ClickHouse
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=cuba

# Auth
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=3600
REFRESH_TOKEN_EXPIRES_IN=604800

# Telemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
LOG_LEVEL=info

# Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8080

# gRPC Services
IAM_AUTH_GRPC_ADDR=127.0.0.1:50051
